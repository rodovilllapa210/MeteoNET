<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoNET.Views.IdiomasPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Selecciona un idioma" FontSize="Large" Margin="0,0,0,10" />
            <Picker x:Name="idiomaPicker" Title="Idioma">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Español</x:String>
                        <x:String>Inglés</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Aceptar" Clicked="OnIdiomaSelectedIndexChanged" Margin="0,10,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>