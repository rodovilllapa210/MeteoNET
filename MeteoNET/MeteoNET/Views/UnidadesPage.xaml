<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoNET.Views.UnidadesPage">
    <ContentPage.Content>
        <StackLayout Margin="10">
            <Label Text="Selecciona un sistema de unidades" FontSize="Large" Margin="0,0,0,10" />
            <Picker x:Name="unidadesPicker" Title="Unidades">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Sist. Métrico</x:String>
                        <x:String>Estándar</x:String>
                        <x:String>Imperial</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Aceptar" Clicked="OnUnidadesSelectedIndexChanged" Margin="0,10,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>